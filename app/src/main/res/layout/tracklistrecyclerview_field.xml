<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/songlistalbumart"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_baseline_music_note_24" />

    <TextView
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/songlisttitleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/songlistduration"
        android:layout_toEndOf="@id/songlistalbumart"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/songlistartistview"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/songlistalbumart"
        android:layout_toStartOf="@+id/songlistduration"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/songlisttitleview"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/songlistduration"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerviewclicklbutton"
        android:background="#00FFFFFF"/>

</RelativeLayout>